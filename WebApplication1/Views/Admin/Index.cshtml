                            });
                        });
                    </script>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>


    <div id="admin" class="container">
        <form class="form-horizontal" v-on:submit.prevent="addAdmin(ObjAdmin),rerender" method="post">
            <div class="form-group">
                <label class="col-lg-2 control-label">
                    Id
                </label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" v-model="ObjAdmin.id" disabled />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">
                    Nom
                </label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" v-model="ObjAdmin.nom" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">
                    Prenom
                </label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" v-model="ObjAdmin.prenom" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">
                    Cin
                </label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" v-model="ObjAdmin.cin" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">
                    Email
                </label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" v-model="ObjAdmin.email" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">
                    Password
                </label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" v-model="ObjAdmin.passwordd" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">
                    Tel
                </label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" v-model="ObjAdmin.tel" />
                </div>
            </div>
            <hr />
            <div class="col-lg-offset-2">
                <button class="btn btn-primary" type="submit" v-if="!edit">Ajouter</button>
                <a class="btn btn-success" v-on:click="updateAdmin(ObjAdmin),edit=false" v-if="edit">Enregistrer</a>
                <button class="btn btn-default" type="reset" v-if="edit" v-on:click="restinputs()">Annuler</button>
            </div>

        </form>
        <hr />
        <input type="text" class="form-group" v-model="filtreradmin" />
        <hr />
        <table class="table table-bordered">
            <tr>
                <th>id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Cin</th>
                <th>Email</th>
                <th>Passwordd</th>
                <th>Tel</th>


            </tr>
            <tr v-for="admin in filtredadmins">
                <td>{{admin.id}}</td>
                <td>{{admin.nom}}</td>
                <td>{{admin.prenom}}</td>
                <td>{{admin.cin}}</td>
                <td>{{admin.email}}</td>
                <td>{{admin.passwordd}}</td>
                <td>{{admin.tel}}</td>
                <td><button class="btn btn-success" v-on:click="listerAdmin(admin.id)">Modifier</button></td>
                <td><button class="btn btn-danger" v-on:click="deleteAdmin(admin.id)">Supprimer</button></td>
            </tr>



        </table>


    </div>

    <div class="footer">
        <div class="container">
            <h2><a href="/Home/indix">Music Club</a></h2>
